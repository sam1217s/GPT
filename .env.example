# ==========================================
# CONFIGURACIÓN DEL SERVIDOR
# ==========================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# ==========================================
# BASE DE DATOS
# ==========================================
MONGODB_URI=mongodb://localhost:27017/project_management_db
MONGODB_TEST_URI=mongodb://localhost:27017/project_management_test

# ==========================================
# CONFIGURACIÓN JWT
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long_replace_this
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_characters_long_replace_this
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ==========================================
# CONFIGURACIÓN DE EMAIL
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_FROM_NAME=Project Management API
EMAIL_SECURE=false

# ==========================================
# CONFIGURACIÓN DE IA - GROQ (Gratis)
# ==========================================
GROQ_API_KEY=gsk_your_groq_api_key_here_get_free_at_console_groq_com
AI_PROVIDER=groq

# ==========================================
# CONFIGURACIÓN DE CLOUDINARY (Opcional)
# ==========================================
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_KEY=your_api_key
CLOUDINARY_SECRET=your_api_secret

# ==========================================
# CONFIGURACIÓN DE SEEDERS
# ==========================================
RUN_SEEDERS=false

# ==========================================
# USUARIO ADMINISTRADOR INICIAL
# ==========================================
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ==========================================
# CONFIGURACIÓN DE SEGURIDAD
# ==========================================
BCRYPT_ROUNDS=12

# ==========================================
# CONFIGURACIÓN DE CORS
# ==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ==========================================
# CONFIGURACIÓN DE LOGS
# ==========================================
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=5242880
LOG_MAX_FILES=5

# ==========================================
# CONFIGURACIÓN DE ARCHIVOS
# ==========================================
MAX_FILE_SIZE=5242880
