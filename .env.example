// ===== .env.example (ACTUALIZADO PARA DEEPSEEK) =====
# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# =================================
# DATABASE CONFIGURATION
# =================================
MONGODB_URI=mongodb://localhost:27017/project_management
MONGODB_TEST_URI=mongodb://localhost:27017/project_management_test

# =================================
# JWT CONFIGURATION
# =================================
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_characters_long
JWT_REFRESH_EXPIRE=30d

# =================================
# EMAIL CONFIGURATION (NodeMailer)
# =================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=Project Management API

# =================================
# CLOUDINARY CONFIGURATION
# =================================
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_KEY=your_api_key
CLOUDINARY_SECRET=your_api_secret

# =================================
# DEEPSEEK CONFIGURATION (for AI features)
# =================================
DEEPSEEK_API_KEY=your_deepseek_api_key

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# =================================
# FILE UPLOAD CONFIGURATION
# =================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,txt
UPLOAD_PATH=./uploads

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=5242880
LOG_MAX_FILES=5

# =================================
# SEEDERS
# =================================
RUN_SEEDERS=false
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD=Admin123456!

# =================================
# SECURITY
# =================================
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =================================
# PAGINATION
# =================================
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100